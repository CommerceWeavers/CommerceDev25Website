---
const currentLang = Astro.url.pathname.split('/')[1] == 'en' ? 'en' : 'pl';
let str;
if (currentLang === 'en') {
    str = await import('../content/en/strings.md');
} else {
    str = await import('../content/pl/strings.md');
}
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 container mx-auto px-12 md:px-8">
    <div id="sponsors" class="md:order-1 pt-16">
        <h2 class="text-4xl uppercase mb-6">{str.frontmatter.sponsors_header}</h2>
        <div class="text-lg mb-8 text-neutral-400 max-w-[37rem]">
            <div set:html={str.frontmatter.sponsors_desc}></div>
        </div>
    </div>

    <div class="md:order-3 grid lg:grid-cols-2 gap-4">
        <div class="hidden lg:flex justify-center items-center bg-[#161612] text-[#5F512C] rounded-4xl text-center">
            <div set:html={str.frontmatter.your_logo}></div>
        </div>
        <a href="mailto:contact@commerce-dev.com" class="flex flex-col justify-between shape py-10 md:py-12 md:hover:py-14 transition-all px-8 md:aspect-1/1 rounded-4xl gap-6">
            <div class="">
                <svg width="54" height="54" viewBox="0 0 54 54" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18.681 2H51.476V34.795M51.681 2.81988L2 52.5001" stroke="black" stroke-width="4"/>
                </svg>
            </div>
            <div class="text-xl sm:text-3xl md:text-3xl lg:text-2xl xl:text-3xl 2xl:text-4xl text-black uppercase">{str.frontmatter.sponsors_cta}</div>
        </a>
    </div>

    <div id="partners" class="md:order-2 pt-20 md:pt-16">
        <h2 class="text-4xl uppercase mb-6">{str.frontmatter.partners_header}</h2>
        <div class="text-lg mb-8 text-neutral-400 max-w-[37rem]">
            <div set:html={str.frontmatter.partners_desc}></div>
        </div>
    </div>

    <div class="md:order-4 grid lg:grid-cols-2 gap-4">
        <div class="hidden lg:flex justify-center items-center bg-[#161612] text-[#5F512C] rounded-4xl text-center">
            <div set:html={str.frontmatter.your_logo}></div>
        </div>
        <a href="mailto:contact@commerce-dev.com" class="flex flex-col justify-between shape py-10 md:py-12 md:hover:py-14 transition-all px-8 md:aspect-1/1 rounded-4xl gap-6">
            <svg class="md:hidden" width="54" height="54" viewBox="0 0 54 54" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18.681 2H51.476V34.795M51.681 2.81988L2 52.5001" stroke="black" stroke-width="4"/>
            </svg>
            <div class="text-xl sm:text-3xl md:text-3xl lg:text-2xl xl:text-3xl 2xl:text-4xl text-black uppercase">{str.frontmatter.partners_cta}</div>
            <div class="hidden md:block">
                <svg width="54" height="54" viewBox="0 0 54 54" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18.681 2H51.476V34.795M51.681 2.81988L2 52.5001" stroke="black" stroke-width="4"/>
                </svg>
            </div>
        </a>
    </div>
</div>
